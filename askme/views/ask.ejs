<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>
    <div class="container" id="formask">
        <div class="card mb-4 custom-card shadow-lg">
            <div class="card-header text-white" style="background-color: #800020;">
                <h3 class="mb-0">Make a Question!</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/saveask">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" placeholder="Title to your question!" class="form-control" name="title" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <label>Question</label>
                        <textarea placeholder="Make your question here!" class="form-control" name="question" required></textarea>
                    </div>
                    <br>
                    <div class="form-group">
                        <label>Category</label>
                        <select name="category" class="form-control" required>
                            <option value="Node">Node</option>
                            <option value="Python">Python</option>
                            <option value="JavaScript">JavaScript</option>
                        </select>
                    </div>
                    <br>
                    <button class="btn btn-info btn-sm">Ask!</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include ("partials/footer.ejs") %>
